<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:elevation="4dp"
    android:theme="@style/ToolbarTheme"
    app:popupTheme="@style/ToolbarPopupTheme">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/toolbar_back_button"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:onClick="onBackButtonClick"
        android:clickable="true"
        android:background="@drawable/abc_action_bar_item_background_material" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/toolbar_icon"
        android:src="@drawable/whatsappplus_person_michael"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Michael"
            android:id="@+id/toolbar_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Michael, Maxi, Maria, You"
            android:id="@+id/toolbar_subtitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
            android:textSize="12sp"
            android:visibility="gone"
            android:ellipsize="end"
            android:singleLine="true"/>

    </LinearLayout>


</android.support.v7.widget.Toolbar>